include(ExternalProject)

set(GOOGLE_TEST_INSTALL_DIR ${CMAKE_BINARY_DIR}/thirdparty/googletest)
set(GOOGLE_TEST_INCLUDE_DIR ${GOOGLE_TEST_INSTALL_DIR}/include)
set(GOOGLE_TEST_LIB_DIR ${GOOGLE_TEST_INSTALL_DIR}/lib)
ExternalProject_Add(googletest_external_project
    SOURCE_DIR  ${CMAKE_SOURCE_DIR}/thirdparty/googletest
    PREFIX      ${GOOGLE_TEST_INSTALL_DIR}
    INSTALL_DIR ${GOOGLE_TEST_INSTALL_DIR}
    CMAKE_ARGS  -DCMAKE_C_COMPILER=${CMAKE_C_COMPILER}
                -DCMAKE_CXX_COMPILER=${CMAKE_CXX_COMPILER}
                -DCMAKE_CXX_FLAGS=${EXTERNAL_PROJECT_CMAKE_CXX_FLAGS}
                -DCMAKE_INSTALL_PREFIX:PATH=${GOOGLE_TEST_INSTALL_DIR}
                -DBUILD_SHARED_LIBS=${BUILD_SHARED_LIBS}
)
include_directories(BEFORE SYSTEM ${GOOGLE_TEST_INCLUDE_DIR})
link_directories(${GOOGLE_TEST_LIB_DIR})
set(PACKAGE small_net)
set(PACKAGE_PATH ${SHEEP_PROJECT_SOURCE_DIR}/src/extends/${PACKAGE})
FIND_PATH(${PACKAGE}_INCLUDE_DIRS ${PACKAGE}.h ${PACKAGE_PATH}/)
FIND_LIBRARY(${PACKAGE}_LIBRARIES lib${PACKAGE}.a PATH ${PACKAGE_PATH}/build)
IF (${PACKAGE}_INCLUDE_DIRS AND ${PACKAGE}_LIBRARIES)
	SET(${PACKAGE}_FOUND TRUE)
ENDIF (${PACKAGE}_INCLUDE_DIRS AND ${PACKAGE}_LIBRARIES)
IF (${PACKAGE}_FOUND)
    IF (NOT ${PACKAGE}_FIND_QUIETLY)
        MESSAGE(STATUS "Found ${PACKAGE}: ${${PACKAGE}_LIBRARIES}")
    ENDIF (NOT ${PACKAGE}_FIND_QUIETLY)
ELSE (${PACKAGE}_FOUND)
    IF (${PACKAGE}_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find ${PACKAGE} library")
    ENDIF (${PACKAGE}_FIND_REQUIRED)
ENDIF (${PACKAGE}_FOUND)

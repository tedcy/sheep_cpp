set(PACKAGE_PATH ${SHEEP_PROJECT_SOURCE_DIR}/src/log)
FIND_PATH(log_INCLUDE_DIRS log.h ${PACKAGE_PATH}/)
FIND_LIBRARY(log_LIBRARIES liblog.a PATH ${PACKAGE_PATH}/build)

IF (log_INCLUDE_DIRS AND log_LIBRARIES)
	SET(log_FOUND TRUE)
ENDIF (log_INCLUDE_DIRS AND log_LIBRARIES)
IF (log_FOUND)
    IF (NOT log_FIND_QUIETLY)
        MESSAGE(STATUS "Found log ${log_LIBRARIES}")
    ENDIF (NOT log_FIND_QUIETLY)
ELSE (log_FOUND)
    IF (log_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find log library")
    ENDIF (log_FIND_REQUIRED)
ENDIF (log_FOUND)

find_package(glog CONFIG REQUIRED)
SET(log_LIBRARIES ${log_LIBRARIES} glog::glog)
